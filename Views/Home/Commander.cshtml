
@{
    ViewBag.Title = "Commande";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Commander - Boutique de Vêtements</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">

        <script>

      function confirmFunction()
      {
         var r = confirm("Confirmer de la commande");
      }
        </script>

    <style>
        body {
            font-family: 'Roboto', sans-serif;
            margin: 10px;
            padding: 0;
            background-color: #f9f9f9;
            color: #333;
            margin: 120px;
        }

        .header {
            background-color: #222;
            color: #fff;
            padding: 20px;
            text-align: center;
        }


        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                font-size: 18px;
                display: block;
                margin-bottom: 5px;
            }

            .form-group input[type="text"],
            .form-group input[type="email"] {
                width: 100%;
                padding: 10px;
                border: 1px solid #ddd;
                border-radius: 5px;
                box-sizing: border-box;
            }

            .form-group input[type="submit"] {
                background-color: green;
                color: #fff;
                border: none;
                padding: 10px 20px;
                border-radius: 5px;
                cursor: pointer;
                font-size: 18px;
                transition: background-color 0.3s;
            }

                .form-group input[type="submit"]:hover {
                    background-color: #444;
                }
    </style>
</head>
<body>
    <div class="container">
        <div class="title">
            <h1>Formulaire de livraison</h1>
        </div>

        <form action="Confirmation" name="identForm" method="post">
            <fieldset>
                <legend>Informations du client</legend>
                <div class="form-group">
                    <label for="Prenom">Prénom:</label>
                    <input type="text" placeholder="Saisissez votre prénom" id="Prenom" name="TxtPrenom" required>
                </div>

                <div class="form-group">
                    <label for="Nom">Nom:</label>
                    <input type="text" placeholder="Saisissez votre nom" id="Nom" name="TxtNom" required>
                </div>

                <div class="form-group">
                    <label for="DateNaissance">Date de naissance:</label>
                    <input type="text" id="DateNaissance" placeholder="aaaa-mm-jj" name="TxtDateNaissance" required>
                </div>

                <div class="form-group">
                    <label for="Description">Description du produit:</label>
                    <input type="text" id="Description" name="TxtDescription" required>
                </div>

                <div class="form-group">
                    <label for="Adresse">Adresse:</label>
                    <input type="text" placeholder="Ex: 400 Den Haag, Ottawa, ON" id="Adresse" name="TxtAdresse" required>
                </div>

                <div class="form-group">
                    <label for="telephone">Téléphone:</label>
                    <input type="text" placeholder="***-***-****" id="Telephone" name="TxtTelephone" required>
                </div>

                <div class="form-group">
                    <input type="submit" value="Confirmer la commande" id="soumettre" class="btn btn-primary">
                </div>
            </fieldset>
        </form>
    </div>
</body>

</html>
